{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_paquete_edit' %}

{% block main %}
    <h1>{{ 'title.edit_paquete'|trans({'%id%': paquete.id}) }}</h1>

    {{ include('default/_flash_messages.html.twig') }}

    {{ include('admin/paquete/_form.html.twig', {
        form: edit_form,
        button_label: 'Guardar'|trans,
        include_back_to_home_link: true,
    }, with_context = false) }}
{% endblock %}

{% block sidebar %}
    <div class="section actions">
        {{ include('admin/paquete/_form.html.twig', {
            form: delete_form,
            button_label: 'Eliminar paquete'|trans,
            button_css: 'btn btn-lg btn-block btn-danger',
            show_confirmation: true,
        }, with_context = false) }}
    </div>

    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}
