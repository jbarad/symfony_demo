{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_paquete_show' %}

{% block main %}
    <h1>{{ paquete.titulo }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Descripción</th>
                <td>{{ paquete.descripcion|md2html }}</td>
            </tr>
            <tr>
                <th>Fecha de creación</th>
                <td><p>{{ paquete.publishedAt|localizeddate('long', 'medium') }}</p></td>
            </tr>
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('admin_paquete_edit', { id: paquete.id }) }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-edit"></i> Editar paquete
        </a>
    </div>

    <div class="section">
        {{ include('admin/paquete/_form.html.twig', {
            form: delete_form,
            button_label: 'Eliminar paquete'|trans,
            button_css: 'btn btn-lg btn-block btn-danger',
            show_confirmation: true,
        }, with_context = false) }}
    </div>

    {{ show_source_code(_self) }}
{% endblock %}
