{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_paquete_new' %}

{% block main %}
    <h1>{{ 'title.paquete_new'|trans }}</h1>

    {{ form_start(form) }}
        {{ form_row(form.titulo) }}
        {{ form_row(form.descripcionCortaTitulo) }}
        {{ form_row(form.descripcionCortaTexto) }}
        {{ form_row(form.descripcionLargaTitulo) }}
        {{ form_label(form.bullets) }}
        <div class="bulletContainer">
            <div class="bullets" data-prototype="{{ form_widget(form.bullets.vars.prototype)|e }}">
            </div>
        </div>
        {% do form.bullets.setRendered %}
        {{ form_row(form.salidasTitulo) }}
        {{ form_row(form.salidasTexto) }}
        {{ form_row(form.legalesTitulo) }}
        {{ form_row(form.legalesTexto) }}
        {{ form_row(form.validoDesde) }}
        {{ form_row(form.validoHasta) }}
        {{ form_row(form.pasajeros) }}
        {{ form_row(form.moneda) }}
        {{ form_row(form.formaVenta) }}

        <input type="submit" value="{{ 'label.create_paquete'|trans }}" class="btn btn-primary" />

        {{ form_widget(form.saveAndCreateNew, { label: 'label.save_and_create_new'|trans, attr: { class: 'btn btn-primary' } }) }}

        <a href="{{ path('admin_paquete_index') }}" class="btn btn-link">
            {{ 'action.back_to_list'|trans }}
        </a>
    {{ form_end(form) }}

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="{{ asset('js/paquete.js') }}"></script>
{% endblock %}

{% block sidebar %}
    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}